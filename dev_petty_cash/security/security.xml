<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record model="ir.module.category" id="module_category_petty_cash">
         <field name="name">Petty Cash</field>
         <field name="description">Helps you handle your Petty Cash Entry.</field>
        <field name="sequence">7</field>
    </record>
    
    <record id="group_petty_user" model="res.groups">
        <field name="name">User: Own Documents Only</field>
        <field name="category_id" ref="dev_petty_cash.module_category_petty_cash"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">the user will have access to his own data in the Petty Cash application.</field>
    </record>

    <record id="group_petty_manager" model="res.groups">
        <field name="name">Manager: All Documents</field>
        <field name="category_id" ref="dev_petty_cash.module_category_petty_cash"/>
        <field name="implied_ids" eval="[(4, ref('group_petty_user'))]"/>
        <field name="comment">the user will have access to all records of everyone in the Petty Cash application.</field>
    </record>
    
    
    <record id="petty_cash_personal_rule" model="ir.rule">
        <field name="name">Personal Request</field>
        <field ref="model_petty_cash_request" name="model_id"/>
        <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('dev_petty_cash.group_petty_user'))]"/>
    </record>
    <record id="petty_cash_see_all" model="ir.rule">
        <field name="name">All Request</field>
        <field ref="model_petty_cash_request" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('dev_petty_cash.group_petty_manager'))]"/>
    </record>
    
    
    <record id="petty_cash_exp_personal_rule" model="ir.rule">
        <field name="name">Personal Expense</field>
        <field ref="model_petty_cash_expense" name="model_id"/>
        <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('dev_petty_cash.group_petty_user'))]"/>
    </record>
    <record id="petty_cash_exp_see_all" model="ir.rule">
        <field name="name">All Expense</field>
        <field ref="model_petty_cash_expense" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('dev_petty_cash.group_petty_manager'))]"/>
    </record>
    <!-- Inicia: 2024-10-05-->    
    <!-- Grupo Auditor: Hereda reglas del Manager -->
    <record id="group_petty_auditor" model="res.groups">
        <field name="name">Auditor: Limited Access</field>
        <field name="category_id" ref="dev_petty_cash.module_category_petty_cash"/>
        <!-- Hereda los permisos del grupo de Manager -->
        <field name="implied_ids" eval="[(4, ref('dev_petty_cash.group_petty_manager'))]"/>
        <field name="comment">The auditor will have access to specific auditing features in the Petty Cash application.</field>
    </record>

    <!-- Ejemplo de una regla de seguridad específica para el grupo Auditor -->
    <record id="petty_cash_auditor_view_only_rule" model="ir.rule">
        <field name="name">Auditor View Only</field>
        <field ref="model_petty_cash_request" name="model_id"/>
        <!-- Esta regla limita al auditor solo a la visualización (read-only) -->
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('dev_petty_cash.group_petty_auditor'))]"/>
    </record>

    <!-- Otra regla para un modelo diferente, si se necesita -->
    <record id="petty_cash_exp_auditor_view_only_rule" model="ir.rule">
        <field name="name">Auditor View Only Expenses</field>
        <field ref="model_petty_cash_expense" name="model_id"/>
        <!-- Esta regla limita al auditor solo a la visualización (read-only) -->
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="groups" eval="[(4, ref('dev_petty_cash.group_petty_auditor'))]"/>
    </record>

    <!-- Finaliza: 2024-10-05-->    
    <data noupdate="0">
        <record model="ir.rule" id="petty_cash_request_multi_company_rule">
            <field name="name">Petty Cash Request multi-company</field>
            <field name="model_id" ref="model_petty_cash_request"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        
        <record model="ir.rule" id="petty_cash_exp_multi_company_rule">
            <field name="name">Petty Cash Expense multi-company</field>
            <field name="model_id" ref="model_petty_cash_expense"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
