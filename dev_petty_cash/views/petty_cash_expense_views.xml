<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_petty_cash_expense_tree" model="ir.ui.view">
        <field name="name">view.petty.cash.expense.tree</field>
        <field name="model">petty.cash.expense</field>
        <field name="arch" type="xml">
            <tree string="Petty Cash Expense">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date"/>
                <field name="petty_journal_id" optional="show"/>
                <field name="company_id" optional="hide"/>
                <field name="user_id" optional="hide"/>
                <field name="expense_amount"/>
                <field name="currency_id" invisible="1"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_petty_cash_expense_form" model="ir.ui.view">
        <field name="name">view.petty.cash.expense.form</field>
        <field name="model">petty.cash.expense</field>
        <field name="arch" type="xml">
            <form string="Petty Cash Expense">
                <header>
                    <button name="action_cofirm" string='Confirm'
                            type='object' class="oe_highlight"
                            states="draft"/>
                            
                    <button name="action_create_payment" string='Register Payment'
                            type='object' class="oe_highlight"
                            states="confirm"/>
                    
                    <button name="action_reconcile" string='Reconcile Payment'
                            type='object' class="oe_highlight"
                            states="payment"/>
                            
                            
                    <button name="action_draft" string='Set To Draft'
                            type='object'
                            states="cancel,confirm"/>
                            
                    <button name="action_cancel" string='Cancel'
                            type='object'
                            states="confirm,payment"/>
                    
                    
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,payment,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_payment"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            attrs="{'invisible': [('payment_count', '=', 0)]}">
                            <field name="payment_count" widget="statinfo" string="Payments"/>
                        </button>
                    </div>
                    <h3>
                        <field name="name" readonly="1"/>
                    </h3>
                    <group>
                        <group>
                            <field name="employee_id" required='1' attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="payment_journal_id" required='1' attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="petty_journal_id" required='1' attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="date" required='1' attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="currency_id" invisible='1'/>
                            <field name="user_id" required='1' readonly="1"/>
                            <field name="company_id" required='1' attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="payment_ids" widget="many2many_tags" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string='Expense Lines'>
                            <field name="expense_lines" context="{'default_currency_id':currency_id}">
                                <tree editable="bottom">
                                    <field name="product_id" required="1"/>
                                    <field name='account_id' required="1"/>
                                    <field name="analytic_account_id"/>
                                    <field name="amount" widget="monetary" required="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="product_id"/>
                                            <field name='account_id'/>
                                        </group>
                                        <group>
                                            <field name="currency_id" invisible="1"/>
                                            <field name="analytic_account_id"/>
                                            <field name='amount' widget="monetary"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group colspan="4">
                                    <field name="note" nolabel="1" placeholder="Terms and conditions..."/>
                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="balance" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="expense_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="remaining_balace"/>
                                    </div>
                                    <field name="remaining_balace" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <div class="oe_clear"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>  
            </form>
        </field>
    </record>


    <record id="dev_petty_cash_expense_filter" model="ir.ui.view">
        <field name="name">petty.cash.expense.filter</field>
        <field name="model">petty.cash.expense</field>
        <field name="arch" type="xml">
            <search string="Petty Cash">
                <field name="name" string='Petty Cash'/>
                <field name="employee_id"/>
                <field name="date"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Requested" name="request" domain="[('state','=','request')]"/>
                <filter string="Approved" name="approve" domain="[('state','=','approve')]"/>
                <filter string="Cancel" name="cancel" domain="[('state','=','cancel')]"/>
                <filter string="Date" name="date" date="date"/>

                <group expand="0" string="Group By">
                    <filter name="employee_id" string="Employee" domain="[]" context="{'group_by':'employee_id'}"/>
                    <filter name="petty_journal_id" string="Petty Cash Journal" domain="[]" context="{'group_by':'petty_journal_id'}"/>
                    <filter name="company_id" string="Company" domain="[]" context="{'group_by':'company_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="action_petty_cash_expense" model="ir.actions.act_window">
        <field name="name">Petty Cash Expense</field>
        <field name="res_model">petty.cash.expense</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add Petty Cash Expense
            </p>
        </field>
    </record>


    <!--Menus-->

    <menuitem name="Petty Cash Expense" id="dev_petty_cash_expense_menu" 
              parent='dev_petty_cash_menu' 
              action="action_petty_cash_expense" sequence="3" groups="dev_petty_cash.group_petty_user"/>

</odoo>
