<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_petty_cash_expense_tree" model="ir.ui.view">
        <field name="name">view.petty.cash.expense.tree</field>
        <field name="model">petty.cash.expense</field>
        <field name="arch" type="xml">
            <tree string="Petty Cash Expense">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date"/>
                <field name="petty_journal_id" optional="show"/>
                <field name="company_id" optional="hide"/>
                <field name="user_id" optional="hide"/>
                <field name="expense_amount"/>
                <field name="currency_id" invisible="1"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_petty_cash_expense_form" model="ir.ui.view">
        <field name="name">view.petty.cash.expense.form</field>
        <field name="model">petty.cash.expense</field>
        <field name="priority" eval="14"/>
        <field name="arch" type="xml">
            <form string="Petty Cash Expense">
                <header>
                    <button name="action_confirm" string='Confirm'
                            type='object' class="oe_highlight"
                            states="draft"/>
                            
                    <button name="action_validate" string='Validate'
                            type='object' class="oe_highlight"
                            states="confirm"/>
                    
                    <button name="action_reconcile" string='Reconcile Payment'
                            type='object' class="oe_highlight"
                            states="validate"/>
                            
                            
                    <button name="action_draft" string='Set To Draft'
                            type='object'
                            states="cancel,confirm"/>
                            
                    <button name="action_cancel" string='Cancel'
                            type='object'
                            states="confirm,validate"/>
                    
                    
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_payment"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            attrs="{'invisible': [('payment_count', '=', 0)]}">
                            <field name="payment_count" widget="statinfo" string="Payments"/>
                        </button>
                    </div>
                    <h3>
                        <field name="name" readonly="1"/>
                    </h3>
                    <group>
                        <group>
                            <field name="employee_id" required='1' attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="payment_journal_id" required='1' attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="petty_journal_id" required='1' attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="date" required='1' attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="currency_id" invisible='1'/>
                            <field name="user_id" required='1' readonly="1"/>
                            <field name="company_id" required='1' attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="payment_ids" widget="many2many_tags" invisible="1"/>
                            <field name="account_move_ids_expense" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string='Expense Lines'>
                            <field name="expense_lines" context="{'default_currency_id':currency_id}" options="{'no_create': True, 'no_delete': True}">
                                <tree editable="bottom" attrs="{'readonly': [('parent.state', '=', 'done')]}">
                                    <field name="date_expense" required="1"/>
                                    <field name="note_expense" />
                                    <field name="supplier_id" required="1"/>
                                    <field name="product_id" required="1"/>
                                    <field name='account_id' required="1"/>
                                    <field name="analytic_account_id"/>
                                    <field name="invoice_number" required="1"/>
                                    <field name="invoice_tax_id" />
                                    <field name="tax_amount" widget="monetary" required="0"/>
                                    <field name="amount" widget="monetary" required="1"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="expense_state" invisible="0"/>
                                </tree>
                                <form attrs="{'readonly': [('parent.state', '=', 'done')]}">
                                    <group>
                                        <group>
                                            <field name="product_id"/>
                                            <field name='account_id'/>
                                            <field name="expense_state" invisible="1"/>
                                        </group>
                                        <group>
                                            <field name="currency_id" invisible="1"/>
                                            <field name="analytic_account_id"/>
                                            <field name='amount' widget="monetary"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group colspan="4">
                                    <field name="note" nolabel="1" placeholder="Terms and conditions..."/>
                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="balance" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="expense_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="remaining_balance"/>
                                    </div>
                                    <field name="remaining_balance" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <div class="oe_clear"/>
                            </group>
                        </page>
                       <page name="Asiento de Diario" string="Asiento de Diario">
                            <field name="account_move_ids_expense" readonly="1">
                                <tree string="Asientos de Gastos" >
                                        <field name="name"/>
                                        <field name="date"/>
                                        <field name="journal_id"/>
                                        <field name="state"/>
                                        <field name="quick_edit_total_amount" />
                                    </tree>
                                </field>
                                            
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>  
            </form>
        </field>
    </record>
<!---->
<record id="view_petty_cash_expense_form2" model="ir.ui.view">
    <field name="name">view.petty.cash.expense.form2</field>
    <field name="model">petty.cash.expense</field>
    <field name="priority" eval="15"/>
    <field name="arch" type="xml">
        <form string="Petty Cash Expense 2">
            <header>
                <button name="action_confirm" string="Confirm"
                        type="object" class="btn-primary"
                        attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        
                <button name="action_validate" string="Validate"
                        type="object" class="btn-primary"
                        attrs="{'invisible': [('state', '!=', 'confirm')]}"/>
                
                <button name="action_reconcile" string="Reconcile Payment"
                        type="object" class="btn-primary"
                        attrs="{'invisible': [('state', '!=', 'validate')]}"/>
                        
                <button name="action_draft" string="Set To Draft"
                        type="object"
                        attrs="{'invisible': [('state', 'not in', ('cancel', 'confirm'))]}"/>
                        
                <button name="action_cancel" string="Cancel"
                        type="object"
                        attrs="{'invisible': [('state', 'not in', ('confirm', 'validate'))]}"/>

                <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate,done"/>
            </header>
            <sheet>
                <div class="o_button_box" name="button_box">
                    <button name="action_view_payment"
                            type="object"
                            class="o_stat_button"
                            icon="fa-edit"
                            attrs="{'invisible': [('payment_count', '=', 0)]}">
                        <field name="payment_count" widget="statinfo" string="Payments"/>
                    </button>
                </div>
                <h3>
                    <field name="name" readonly="1"/>
                </h3>
                <group>
                    <group>
                        <field name="employee_id" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="payment_journal_id" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="petty_journal_id" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                    <group>
                        <field name="date" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="user_id" required="1" readonly="1"/>
                        <field name="company_id" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="payment_ids" widget="many2many_tags" invisible="1"/>
                    </group>
                </group>
                <notebook>
                    <page string="Expense Lines" >
                        <field name="expense_lines" context="{'default_currency_id': currency_id}"
                            options="{'no_create': True, 'no_delete': True}"
                            attrs="{'readonly': [('state', '=', 'done')]}" >
                            <tree editable="bottom" attrs="{'readonly': [('parent.state', '=', 'done')]}">
                                <field name="date_expense" required="1"/>
                                <field name="note_expense"/>
                                <field name="supplier_id" required="1"/>
                                <field name="product_id" required="1"/>
                                <field name="account_id" required="1"/>
                                <field name="analytic_account_id"/>
                                <field name="invoice_number" required="1"/>
                                <field name="invoice_tax_id"/>
                                <field name="tax_amount" widget="monetary"/>
                                <field name="amount" widget="monetary" required="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="expense_state" invisible="1"/>
                            </tree>
                            <form attrs="{'readonly': [('parent.state', '=', 'done')]}">
                                <group>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="account_id"/>
                                        <field name="expense_state" invisible="1"/>
                                    </group>
                                    <group>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="analytic_account_id"/>
                                        <field name="amount" widget="monetary"/>
                                    </group>
                                </group>
                            </form>
                        </field>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                                <field name="note" nolabel="1" placeholder="Terms and conditions..."/>
                            </group>
                            <group class="o_subtotal_footer o_right" colspan="2" name="sale_total">
                                <field name="balance" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="expense_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <!--***-->
                                <field name="total_tax_amount" />
                                
                                <div class="o_subtotal_footer_separator o_inline o_td_label">
                                    <label for="remaining_balance"/>
                                </div>

                                <!-- Opcional: Mostrar el desglose de impuestos en formato JSON
                                <div t-if="o.total_tax_amount">
                                    <t t-foreach="eval(o.total_tax_amount)" t-as="tax">
                                        <div>
                                            <strong>Tax:</strong> <span t-esc="tax[0]"/>
                                            <strong>Amount:</strong> <span t-esc="tax[1]"/>
                                        </div>
                                    </t>
                                </div>
                                 -->
                                <field name="remaining_balance" nolabel="1" class="o_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <div class="o_clear"/>
                        </group>
                    </page>
                    <page name = "asiento_de_diario" string = "Asiento de Diario">
                        <field name="account_move_ids_expense" readonly="1">
                            <tree string="Asientos de Gastos">
                                <field name="name"/>
                                <field name="date"/>
                                <field name="journal_id"/>
                                <field name="state"/>
                                <field name="amount_total_signed"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </div>
        </form>
    </field>
</record>

<!---->
    <record id="dev_petty_cash_expense_filter" model="ir.ui.view">
        <field name="name">petty.cash.expense.filter</field>
        <field name="model">petty.cash.expense</field>
        <field name="arch" type="xml">
            <search string="Petty Cash">
                <field name="name" string='Petty Cash'/>
                <field name="employee_id"/>
                <field name="date"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Requested" name="request" domain="[('state','=','request')]"/>
                <filter string="Approved" name="approve" domain="[('state','=','approve')]"/>
                <filter string="Cancel" name="cancel" domain="[('state','=','cancel')]"/>
                <filter string="Date" name="date" date="date"/>

                <group expand="0" string="Group By">
                    <filter name="employee_id" string="Employee" domain="[]" context="{'group_by':'employee_id'}"/>
                    <filter name="petty_journal_id" string="Petty Cash Journal" domain="[]" context="{'group_by':'petty_journal_id'}"/>
                    <filter name="company_id" string="Company" domain="[]" context="{'group_by':'company_id'}"/>
                </group>
            </search>
        </field>
    </record>


<record id="action_petty_cash_expense_form1" model="ir.actions.act_window">
    <field name="name">Petty Cash Expense Form 1</field>
    <field name="res_model">petty.cash.expense</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_petty_cash_expense_form"/>
</record>

<record id="action_petty_cash_expense_form2" model="ir.actions.act_window">
    <field name="name">Petty Cash Expense Form 2</field>
    <field name="res_model">petty.cash.expense</field>
    <field name="view_mode">tree,form</field>
    <field name="view_ids" eval="[(5, 0, 0), 
                                   (0, 0, {'view_mode': 'tree', 'view_id': ref('view_petty_cash_expense_tree')}), 
                                   (0, 0, {'view_mode': 'form', 'view_id': ref('view_petty_cash_expense_form2')})]"/>
</record>

