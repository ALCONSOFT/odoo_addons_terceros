<odoo>
    <template id="main_pettycash_exp_template">
         <t t-call="web.external_layout">
            <div class="page" style="font-size: 12px;">
                <span style="font-size: 18px;font-weight: bold;">
                    <center>Petty Cash Expense v11</center>
                </span>

                <table width="100%" style="font-size: 14px;margin-top: 25px;border-collapse: collapse;">
                    <tr style="line-height: 22px;">
                        <td width="15%"><b>Status</b></td>
                        <td width="2%">:</td>
                        <td width="33%"><span t-field="o.state"/></td>
                        <td width="20%"><b>From (Petty Cash Journal)</b></td>
                        <td width="2%">:</td>
                        <td width="28%"><span t-field="o.petty_journal_id"/></td>
                    </tr>
                    <tr>
                        <td colspan="6"><hr style="border-top: 1px solid #000000;"/></td>
                    </tr>
                    <tr style="line-height: 22px;">
                        <td width="15%"><b>Employee</b></td>
                        <td width="2%">:</td>
                        <td width="33%"><span t-field="o.employee_id.name"/></td>
                        <td width="20%"><b>Date</b></td>
                        <td width="2%">:</td>
                        <td width="28%"><span t-field="o.date" t-options='{"format": "dd/MM/yyyy"}'/></td>
                    </tr>
                    <tr>
                        <td colspan="6"><hr style="border-top: 1px solid #000000;"/></td>
                    </tr>
                    <tr style="line-height: 22px;">
                        <td width="15%"><b>To (Payment Journal)</b></td>
                        <td width="2%">:</td>
                        <td width="33%"><span t-field="o.payment_journal_id"/></td>
                        <td width="20%"><b>Saldo Inicial</b></td>
                        <td width="2%">:</td>
                        <td width="28%"><span t-field="o.balance"/></td>
                    </tr>
                    <tr>
                        <td colspan="6"><hr style="border-top: 1px solid #000000;"/></td>
                    </tr>
                </table>

                <h2 style="text-align:left;margin-top: 20px;">
                    <span>Expense #</span> <span t-field="o.name"></span>
                </h2>

                <t t-if="o.expense_lines">
                    <p style="font-weight: bold;font-size: 14px;margin-bottom: 5px;margin-top: 20px;">Expense</p>
                    <table width="100%" class="table table-condensed" style="table-layout: fixed;border-collapse: collapse;">
                        <thead>
                            <tr style="line-height: 12px; border-bottom: 2px solid black;">
                                <th style="border-bottom: 1px solid black;text-align:left;">Date</th>
                                <th style="border-bottom: 1px solid black;text-align:left;">Description</th>
                                <th style="border-bottom: 1px solid black;text-align:left;">Particulars</th>
                                <th style="border-bottom: 1px solid black;text-align:left;">Proveedor</th>
                                <th style="border-bottom: 1px solid black;text-align:left;">No. Factura</th>
                                <th style="border-bottom: 1px solid black;text-align:left;">Analytic Account</th>
                                <th style="border-bottom: 1px solid black;text-align:right;">Invoice Amount</th>
                                <th style="border-bottom: 1px solid black;text-align:right;">Tax Amount</th>
                                <th style="border-bottom: 1px solid black;text-align:right;">Total Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.expense_lines" t-as="line" style="line-height: 12px;">
                                <td><span t-field="line.date_expense"/></td>
                                <td><span t-field="line.note_expense"/></td>
                                <td><span t-field="line.product_id"/></td>
                                <td><span t-field="line.supplier_id"/></td>
                                <td><span t-field="line.invoice_number"/></td>
                                <td><span t-field="line.analytic_account_id"/></td>
                                <td style="text-align:right;"><span t-esc="'{:.2f}'.format(line.amount - line.tax_amount)"/></td>
                                <td style="text-align:right;"><span t-field="line.tax_amount"/></td>
                                <td style="text-align:right;"><span t-field="line.amount"/></td>
                            </tr>
                        </tbody>
                    </table>
                </t>

                <table width="100%" style="table-layout: fixed;margin-top: 20px;">
                    <tr style="line-height: 24px;">
                        <td width="85%" style="text-align: right;font-weight: bold;">Expense Amount :</td>
                        <td width="15%" style="text-align: right;font-weight: bold;"><span t-field="o.expense_amount"/></td>
                    </tr>
                    <tr style="line-height: 24px;">
                        <td width="85%" style="text-align: right;font-weight: bold;">Tax Amount :</td>
                        <t t-set="quantity_number_tax" t-value="float(o.total_tax_amount or 0.0)"/>
                        <td width="15%" style="text-align: right;font-weight: bold;"><span t-esc="'{:.2f}'.format(quantity_number_tax)"/></td>
                    </tr>
                </table>

                <t t-if="o.note != '&lt;p&gt;&lt;br&gt;&lt;/p&gt;'">
                    <p style="font-weight: bold;font-size: 14px;margin-bottom: 5px;margin-top: 20px;">Description</p>
                    <p><span t-field="o.note"/></p>
                </t>

                <table width="100%" style="font-size: 14px;margin-top: 20%;">
                    <td style="margin-top: 1%;">
                        <b>Employee Sign</b>
                        <br/><br/><br/><br/><br/><br/><br/>
                        <b>( <span t-field="o.employee_id.name"/> )</b>
                        <br/>____________________________<br/>
                    </td>
                    <td style="text-align:right;">
                        <b>Approved By</b>
                        <br/><br/><br/><br/><br/><br/><br/>
                        <br/>____________________________<br/>
                    </td>
                </table>
            </div>
         </t>
    </template>

    <template id="petty_cash_exp_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="dev_petty_cash.main_pettycash_exp_template"/>
            </t>
        </t>
    </template>
</odoo>
