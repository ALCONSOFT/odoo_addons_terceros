<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Top menu item -->

        <record id="view_purchase_request" model="ir.ui.view">
            <field name="name">purchase.request.tree</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <tree string="Purchase Request">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="request_responsible"/>
                    <field name="request_date"/>
                    <field name="company_id"/>
                    <field name="source_document"/>
                    <field name="purchase_ids" widget="many2many_tags" invisible="1"/>
                    <field name="state"/>
                    <field name="priority"/>
                </tree>
            </field>
        </record>

        <record id="view_purchase_request_form" model="ir.ui.view">
            <field name="name">purchase.request.form</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <form string="Purchase Request" js_class="readonly_form_state">
                    <header>
                        <button name="action_submit_for_verifier"
                        string="Submit For Verifier" class="btn-primary" type="object"
                        attrs="{'invisible': [('state', '!=', 'draft')]}"
                        groups="ethics_purchase_request.group_request_user"/>
                        <button name="action_submit_for_approver"
                        string="Submit For Approver" class="btn-primary" type="object"
                        attrs="{'invisible': [('state', '!=', 'waiting_for_verifier')]}"
                        groups="ethics_purchase_request.group_request_verifier"/>
                        <button name="action_confirm"
                        string="Confirm" class="btn-primary" type="object"
                        attrs="{'invisible': [('state', '!=', 'waiting_for_approver')]}"
                        groups="ethics_purchase_request.group_request_approver"/>
                        <button name="reject_verifier_pr" string="Reject" type="object" class='oe_highlight' attrs="{'invisible': [('state', '!=', 'waiting_for_verifier')]}" groups="ethics_purchase_request.group_request_verifier"/>
                        <button name="reject_approver_pr" string="Reject" type="object" class='oe_highlight' attrs="{'invisible': [('state', '!=', 'waiting_for_approver')]}" groups="ethics_purchase_request.group_request_approver"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,waiting_for_verifier,waiting_for_approver,confirm"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(action_purchase_request_list)d" type="action" class="oe_stat_button" icon="fa-list-alt" attrs="{'invisible':['|', ('purchase_count', '=', 0), ('state', '!=', 'confirm')]}">
                                <field name="purchase_count" widget="statinfo" string="RFQs/Orders"/>
                                <field name="purchase_ids" invisible="1"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="department_id" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="request_responsible" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="pr_reject_reason_id" readonly="1" attrs="{'invisible': [('state', '!=', 'cancel')], 'readonly': [('state', '=', 'cancel')]}"/>
                            </group>
                            <group>
                                <field name="request_date" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="company_id" readonly="1"/>
                                <field name="source_document" readonly="1"/>
                                <field name="priority" widget="priority"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Request Lines" name="request_lines">
                                <field name="pr_lines">
                                    <tree editable="bottom">
                                        <field name="pr_id" invisible="1"/>
                                        <field name="product_id" required="1" attrs="{'readonly': [('parent.state','not in',('draft'))]}"/>
                                        <field name="name"/>
                                        <field name="account_analytic_id" colspan="2" domain="['|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]" groups="analytic.group_analytic_accounting" attrs="{'readonly': [('parent.state','not in',('draft'))]}"/>
                                        <field name="product_qty" required="1" attrs="{'readonly': [('parent.state','not in',('draft'))]}"/>
                                        <field name="product_uom" required="1" attrs="{'readonly': [('parent.state','not in',('draft'))]}"/>
                                        <field name="vendor_ids" widget="many2many_tags" attrs="{'column_invisible': [('parent.state', 'not in', ['waiting_for_approver','confirm'])]}"/>
                                    </tree>
                                </field>
                                <separator string="Reason For Request"/>
                                    <field name="description" attrs="{'readonly': [('state','not in',('draft'))]}"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_purchase_request_search" model="ir.ui.view">
            <field name="name">purchase.request.search</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <search string="Purchase Request">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="request_responsible"/>
                    <field name="department_id"/>
                    <field name="employee_id"/>
                    <field name="request_date"/>
                    <field name="source_document"/>
                    <filter name="priority" string="High" domain="[('priority', '=', '1')]"/>
                    <group expand="0" string="Group By">
                        <filter name="state" string="State" domain="[]" context="{'group_by': 'state'}"/>
                        <filter name="request_responsible" string="Responsible" domain="[]" context="{'group_by': 'request_responsible'}"/>
                        <filter name="department_id" string="Department" domain="[]" context="{'group_by': 'department_id'}"/>
                        <filter name="employee_id" string="Employee" domain="[]" context="{'group_by': 'employee_id'}"/>
                        <filter name="request_date" string="Request Date" domain="[]" context="{'group_by': 'request_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_purchase_request" model="ir.actions.act_window">
            <field name="name">Purchase Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.request</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_purchase_request_search"/>
        </record>

        <menuitem id="purchase_request_menu"
            name="Purchase Request"
            action="action_purchase_request"
            groups="ethics_purchase_request.group_request_user"
            parent="purchase.menu_procurement_management"/>
</odoo>
