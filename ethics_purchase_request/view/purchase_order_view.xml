<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_pr_ref" model="ir.ui.view">
        <field name="name">purchase.order.form.pr.ref</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="pr_ref_id" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_purchase_request_list">
        <field name="name">Request for Quotations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('pr_ref_id','=',active_id)]</field>
        <field name="context">{
            "default_pr_ref_id":active_id,
            "default_user_id": False,
            }
        </field>
    </record>
</odoo>
