<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="action_print_stock_warehouse_journal" model="ir.actions.report">
        <field name="name">Stock Warehouse Journal Report</field>
        <field name="model">product.product</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">stock_warehouse_journal.print_stock_warehouse_journal</field>
    </record>

    <template id="print_stock_warehouse_journal_document">
        <t t-call="web.internal_layout">
            <div class="page">
                <div class="oe_structure"/>
                <div class="text-center">
                    <h2>
                        <span t-field="doc.display_name"/>
                    </h2>
                    <strong>
                        <p t-esc="location_name"/>
                    </strong>
                    <div class="row mt32 mb32">
                        Date From: <span t-esc="date_from.strftime('%d-%m-%Y')"/>
                        <t t-set="date_to_tmp" t-value="date_to + datetime.timedelta(days=1)"/>
                        To: <span t-esc="date_to.strftime('%d-%m-%Y')"/>
                    </div>
                    <div class="row mt32 mb32">
                        UoM: <span t-esc="doc.uom_id.name"/>
                    </div>
                </div>

                <t t-set="stock_total" t-value="0"/>
                <t t-set="stock_initial" t-value="0"/>
                <t t-set="stock_total_receipts" t-value="0"/>
                <t t-set="stock_total_issues" t-value="0"/>

                <t t-foreach="doc.stock_move_ids" t-as="stock_move">
                    <t t-foreach="stock_move.move_line_ids" t-as="line">
                        <t t-translation="off">
                            <t t-if="line.state == 'done'">
                                <t t-if="line.location_id.id == location_id or line.location_dest_id.id == location_id">
                                    <t t-if="line.date.strftime('%Y-%m-%d') &lt; date_from.strftime('%Y-%m-%d')">
                                        <t t-if="line.location_dest_id.id == location_id">
                                            <t t-set="stock_initial" t-value="stock_initial + line.qty_done"/>
                                        </t>
                                        <t t-else="">
                                            <t t-set="stock_initial" t-value="stock_initial - line.qty_done"/>
                                        </t>
                                    </t>
                                </t>
                            </t>
                        </t>
                    </t>
                </t>

                <t t-set="stock_total" t-value="stock_initial"/>

                <table class="table table-bordered table-striped mb-0" style="border: 2px solid black;">
                    <tr t-att-class="'bg-200 font-weight-bold o_line_section'">
                        <th name="th_date" class="text-right">Date</th>
                        <th name="th_in" class="text-right">In</th>
                        <th name="th_out" class="text-right">Out</th>
                        <th name="th_stock" class="text-right">Stock</th>
                        <th name="th_lot" class="text-left">Lot/SN</th>
                        <th name="th_note" class="text-center">Note</th>
                        <th name="th_docnum" class="text-center">Document Number</th>
                    </tr>

                    <tbody style="border: 2px solid black;">

                        <tr>
                            <td name="td_date" class="text-right">
                            </td>
                            <td name="td_in" class="text-right">
                            </td>
                            <td name="td_out" class="text-right">
                            </td>
                            <td name="td_stock" class="text-right">
                                <strong>
                                    <span t-esc="stock_total" t-options="{&quot;widget&quot;: &quot;integer&quot;}"/>
                                </strong>
                            </td>
                            <td name="td_lot" class="text-left">
                            </td>
                            <td name="th_note" class="text-center">
                                <strong>
                                    <span> Initial Stock</span>
                                </strong>
                            </td>
                            <td name="th_docnum" class="text-center">
                            </td>
                        </tr>

                        <t t-foreach="doc.stock_move_ids" t-as="stock_move">
                            <t t-foreach="stock_move.move_line_ids" t-as="line">
                                <t t-translation="off">
                                    <t t-if="line.state == 'done'">
                                        <t t-if="line.location_id.id == location_id or line.location_dest_id.id == location_id">
                                            <t t-if="line.date.strftime('%Y-%m-%d') &lt; date_to_tmp.strftime('%Y-%m-%d')">
                                                <t t-if="line.date.strftime('%Y-%m-%d') &gt;= date_from.strftime('%Y-%m-%d')">

                                                    <tr>
                                                        <td name="td_date" class="text-right">
                                                            <span t-field="line.date" t-options="{&quot;format&quot;: &quot;dd-MM-YYYY&quot;}" class="m-0"/>
                                                        </td>
                                                        <td name="td_in" class="text-right">
                                                            <t t-if="line.location_dest_id.id == location_id">
                                                                <span t-field="line.qty_done" t-options="{'widget': 'integer'}"/>
                                                                <t t-set="stock_total" t-value="stock_total + line.qty_done"/>
                                                                <t t-set="stock_total_receipts" t-value="stock_total_receipts + line.qty_done"/>
                                                            </t>
                                                        </td>
                                                        <td name="td_out" class="text-right">
                                                            <t t-if="line.location_id.id == location_id">
                                                                <span t-field="line.qty_done" t-options="{&quot;widget&quot;: &quot;integer&quot;}"/>
                                                                <t t-set="stock_total" t-value="stock_total - line.qty_done"/>
                                                                <t t-set="stock_total_issues" t-value="stock_total_issues - line.qty_done"/>
                                                            </t>
                                                        </td>
                                                        <td name="td_stock" class="text-right">
                                                            <span t-esc="stock_total" t-options="{&quot;widget&quot;: &quot;integer&quot;}"/>
                                                        </td>
                                                        <td name="td_lot" class="text-left">
                                                            <t t-if="line.lot_id">
                                                                <span t-field="line.lot_id.name"/>
                                                            </t>
                                                        </td>
                                                        <td name="th_note" class="text-center">
                                                            <t t-if="line.location_dest_id.id == location_id or line.location_id.id == location_id">
                                                                <t t-if="line.picking_id and line.picking_id.origin">
                                                                    <span t-field="line.picking_id.partner_id.name"/>
                                                                </t>
                                                                <t t-else="">
                                                                    <t t-if="line.location_id.name == 'Inventory adjustment' or line.location_dest_id.name == 'Inventory adjustment'">
                                                                        <span>Inventory Adjustment</span>
                                                                    </t>
                                                                </t>
                                                            </t>
                                                        </td>
                                                        <td name="th_docnum" class="text-center">
                                                            <t t-if="line.picking_id">
                                                                <span t-field="line.picking_id.name"/>
                                                            </t>
                                                            <t t-else="">
                                                                <span t-field="line.origin"/>*
                                                            </t>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>
                                        </t>
                                    </t>
                                </t>
                            </t>
                        </t>

                        <tr>
                            <td name="td_date" class="text-right">
                            </td>
                            <td name="td_in" class="text-right">
                            </td>
                            <td name="td_out" class="text-right">
                            </td>
                            <td name="td_stock" class="text-right">
                                <strong>
                                    <span t-esc="stock_total" t-options="{&quot;widget&quot;: &quot;integer&quot;}"/>
                                </strong>
                            </td>
                            <td name="td_lot" class="text-left">
                            </td>
                            <td name="th_note" class="text-center">
                                <strong>
                                    <span> Final Stock</span>
                                </strong>
                            </td>
                            <td name="th_docnum" class="text-center">
                            </td>
                        </tr>

                    </tbody>
                </table>
                <div class="text-left">
                    <div class="row mt32 mb32">
                        Tot Receipts: <span t-esc="stock_total_receipts"/>
                    </div>
                    <div class="row mt32 mb32">
                        Tot Issues: <span t-esc="stock_total_issues"/>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="print_stock_warehouse_journal">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="stock_warehouse_journal.print_stock_warehouse_journal_document"/>
            </t>
        </t>
    </template>
</odoo>
