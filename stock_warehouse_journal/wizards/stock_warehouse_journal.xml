<?xml version="1.0"?>

<odoo>
    <record id="stock_warehouse_journal_wizard_form" model="ir.ui.view">
        <field name="name">stock.warehouse.journal.wizard.form</field>
        <field name="model">stock.warehouse.journal.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Stock Warehouse Journal Report">
                <group>
                    <group class="oe_title">
                        <field name="product_ids" widget="many2many_tags" options= "{'no_open':True,'no_create_edit':1}"/>
                        <field name="location_id" domain="[('usage','=','internal')]" options="{'no_create_edit':True,'no_open': True,}"/>
                    </group>
                    <group>
                        <field name="all_products"/>
                    </group>
                </group>
                <group>
                    <group>
                        <label for="date_from" string="Selection Period: from"/>
                        <div>
                            <field name="date_from" class="oe_inline"/> to
                            <field name="date_to" class="oe_inline" nolabel="1"/>
                        </div>
                    </group>
                    <group>
                    </group>
                </group>
                <footer>
                    <button name="action_stock_warehouse_journal_excel" string="Warehouse Journal Excel" type="object" class="btn-primary"/>
                    <button name="action_stock_warehouse_journal_pdf" string="Warehouse Journal PDF" type="object" class="btn-primary"/>
                    <button string="CLOSE" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="stock_warehouse_journal_action" model="ir.actions.act_window">
        <field name="name">Stock Warehouse Journal</field>
        <field name="res_model">stock.warehouse.journal.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="stock_warehouse_journal_menu"
        action="stock_warehouse_journal_action"
        parent="stock.menu_warehouse_report"
        sequence="20"/>
</odoo>
